<div class="container">
  <h1>ジャンル新規登録</h1>
  <%= form_with model: @genre, url: admins_genres_path, method: :post, local: true do |f| %>
  <div class="form-group">
      <p>ジャンル名</p>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit"投稿", class: "btn btn-primary" %>
    <% end %>
  </div>
  <h1>ジャンル一覧</h1>
  <div class="table">
    <table>
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>