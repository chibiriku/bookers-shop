<div class="table container">
  <h2 class="mt-3">会員一覧</h2>
  <table>
    <thead>
        <tr>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
    <%@customers.each do |customer|%>
      <tr>
        <td>
          <%=customer.family_name%><%=customer.first_name%>
        </td>
        <td><%= customer.email %></td>
        <td>
          <%= form_with model: customer,url: admins_customer_path(customer),method: :patch,local:true do |f| %>
           <%= f.radio_button:is_deleted,false %>
           <%= f.label:"有効" %>
           <%= f.radio_button:is_deleted,true %>
           <%= f.label:"退会" %>
           <%= f.submit "変更" , class: "btn btn-success"%>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center">
  <%= paginate @customers %>
  </div>
</div>