<div class="container">
  <h1>編集</h1>
  <%= form_with model: @book, url: admins_book_path, method: :patch, local: true do |f| %>
    イメージ画像
    <p><%= f.file_field :image_id, accept: "image/*" %></p>
    <div class="form-group">
      <lavel>本のタイトル</lavel>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <lavel>作者</lavel>
      <%= f.text_field :author, class: "form-control" %>
    </div>
    <div class="form-group">
      <lavel>本のあらすじ</lavel>
      <%= f.text_area :synopsis, class: "form-control" %>
    </div>
    <div class="form-group">
      <lavel>値段</lavel>
      <%= f.number_field :price, class: "form-control" %>
    </div>
    <div class="form-group">
      <lavel>ジャンル</lavel>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <p>販売ステータス</p>
      <%= f.radio_button:is_active,true %>
      <%= f.label:"販売中" %>
      <%= f.radio_button:is_active,false %>
      <%= f.label:"販売停止" %>
    </div>
    <div>
      <%= f.submit"保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>