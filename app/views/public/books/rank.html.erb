<div class="container">
  <h1>人気ランキング</h1>
  <div class="row">
    <% count = 1 %>
    <% @all_ranks.each.with_index(1) do |rank, i| %>
      <div class="col-xl-3 col-md-6">
        <h4><%= count %>位</h4>
        <% if rank.image_id.attached? %>
          <%= image_tag rank.image_id, size: "180x180" %>
        <% else %>
          <%= image_tag 'no_image', size: "180x180" %>
        <% end %>
        <p><%= link_to rank.name, book_path(rank.id) %></p>
        <p>¥<%= rank.price.to_s(:delimited) %></p>
        <% count += 1 %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xl-3 col-md-6">
    </div>
    <div class="col-xl-3 col-md-6">
      <%= paginate @all_ranks %>
    </div>
</div>