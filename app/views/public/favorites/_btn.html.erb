<% if book.favorited_by?(current_customer) %>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true, class: "favorites" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= book.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, remote: true, class: "favorites" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.favorites.count %> いいね
  <% end %>
<% end %>
